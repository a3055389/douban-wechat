/* pages/my/my.wxss */

.head{
  height: 480rpx;
  display: flex;
  flex-direction:column;
  align-items: center; 
  justify-content: center;
}
.head image{
  width: 100%;
  position: absolute;
}
.head button{
  width: 330rpx;
  height: 90rpx;
  border-radius: 30px;
}
.cont{
  height: 1000px;
  width: 90%;
  margin: 20rpx auto;
}
.cont-t-l{
  font-size: 36rpx;
  float: left;
  margin-top: 10rpx;
  font-weight: 800;
}
.cont-t-r{
  float: right;
  color: #ccc;
  margin-top: 14rpx;
  font-size: 28rpx;
}
.cont-t{
  height: 60rpx;
}
.cont-b{
  border-bottom: 1px solid #ccc;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
}
.contleft{
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 60rpx;
  height: 100%;
}
.contleft image{
  width: 50rpx;
  height: 50rpx;
  float: left;
}
.cont-center{
  margin-left: 15px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.cont-center text{
  margin: 16rpx 0;
}
.cont-center  text:nth-child(1){
font-size: 28rpx;
}
.cont-center  text:nth-child(2){
font-size: 28rpx;
font-weight: 400;
color: #708090;
}
.cont-center-two{
  margin-left: 60px;
  width: 174rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.cont-center-two text{
  color: #ccc;
  font-size: 28rpx;
  font-weight: 400;
}
.cont-right{
  margin-left: 39rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.cont-right-text{
  font-size: 28rpx;

}