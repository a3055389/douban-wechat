.top {
  width: 95%;
  margin: 0 auto;
  margin-top: 15rpx;
  height: 360rpx;
  border-bottom: 1px solid #ccc;
  font-weight: 700;
}

.top-center {
  display: flex;
  flex-direction: row;
}

.top-center-l {
  margin-top: 10rpx;
  width: 160rpx;
  text-align: center;
  font-size: 40px;
  font-weight: 800;
}

.top-cent {
  display: flex;
  flex-direction: column;
}

.star {
  margin: 0 auto;
}

.top-rrr {
  display: flex;
  flex-direction: column;
  margin: 10rpx 0 0 15rpx;
  justify-content: flex-end;
}

.top-right {
  display: flex;
  flex-direction: row;
  height: 30rpx;
  font-size: 20rpx;
  align-items: center;
  color: #ccc;
  justify-content: flex-end;
}

.top-right-r {
  /* margin-top: 20rpx; */
  width: 300rpx;
  height: 20rpx;
  background-color: #ccc;
  margin: 0px 8rpx;
}

.top-right-b {
  background-color: orange;
  width: 250rpx;
  height: 20rpx;
}

.top-bottom {
  width: 428rpx;
  font-size: 22rpx;
  color: #ccc;
  display: flex;
  flex-direction: row-reverse;
}

.top-bottom-rr {
  margin: 20rpx 20rpx 0 0;
  font-size: 22rpx;
  color: #ccc;
  float: right;
}

.cont {
  width: 95%;
  margin: 20rpx auto;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.cont-top-one {
  font-size: 34rpx;
  font-weight: 600;
}

.cont-top-two {
  font-size: 28rpx;
  color: #a9a9a9;
  font-weight: 600;
}

.cont-top-three {
  font-size: 28rpx;
  color: #ccc;
  flex: 1;
  text-align: right;
  margin-right: 20rpx;
  font-weight: 400;
}
.bod{
  width: 95%;
  margin: 0 auto;
}
.bod-top{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.bod-top image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}
.bod-top-r{
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}
.bod-top-r-txt{
  font-size: 28rpx;
  font-weight: 800;
  margin-left: 5rpx;

}
.bod-top-star{
  font-size: 22rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #ccc;
  justify-content: center;
}
.bod-bod{
  margin-top: 20rpx;
  font-size: 26rpx;

}
.bod-bodystar{
  margin-top: 16rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 25rpx;
  color: #a9a9a9;
  padding-bottom: 25rpx;
  border-bottom: 1px solid #ccc;
}
