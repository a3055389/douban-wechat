/* pages/rpt/rpt.wxss */
 
.bg_box{
   width: 100%;
   height: 1000rpx;
}
.bg_box video{
    width: 200%;
    left: -70%;
   height: 100%;
}
.zhezhao{
  width: 100%;
  height: 1000rpx;
  position:absolute;
  top: 0rpx;
}
.zhezhao1{
  width: 95%;
  height: 350rpx;
  position: relative;
  z-index: 2;
  margin: 0 auto;
}
.zhezhao1 image{
  width: 100%;
  z-index: 2;
  margin: 0 auto;
  height: 100%;
}
.comn{
  width: 90%;
  text-align: center;
  height: 100rpx;
  margin: 0 auto;
  line-height: 100rpx;
  letter-spacing: 5rpx;
}
.comn_b{
  width: 90%;
  height: 290rpx;
  margin: 0 auto;
}
.comn_b_image{
  width: 320rpx;
  height: 220rpx;
  float: left;
  display: flex;
  flex-direction: column;
  background-size: 100% 100%;
}
.comn_b_image text:nth-child(1){
  color: rgb(151, 151, 151);
  font-size: 28rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.comn_b_image text:nth-child(2){
  color: #ccc;
  margin-left: 20rpx;
}
.comn_b_item{
  height: 220rpx;
  width: 320rpx;
  float: right;
  display: flex;
  flex-direction: column;
  background-size: 100% 100%;
}
.comn_b_item text:nth-child(1){
  color: rgb(151, 151, 151);
  font-size: 28rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.comn_b_item text:nth-child(2){
  color: #ccc;
  margin-left: 20rpx;
}
.comnn{
  width: 100%;
  display: flex;
  flex-direction: row;
}
.comnn text:nth-child(1){
  flex: 1;
  font-size: 24rpx;
  color: #969696;
  margin-left: 10rpx;
}
.comnn text:nth-child(2){
  flex: 1;
  font-size: 24rpx;
  color: #969696;
  margin-left: 50rpx;
}
.footer{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #ccc;
  font-size: 20rpx;
  letter-spacing: 4rpx;
}